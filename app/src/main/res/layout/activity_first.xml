<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".first"
    android:background="#232030"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121019"
        android:padding="5dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:onClick="gohome"
            android:layout_height="wrap_content"
            android:text="Go Home" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_toLeftOf="@id/textView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profileicon"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/transparent"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="" />
    </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/question1"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1"/>
        <TextView
            android:id="@+id/mainquestion1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Which of the language uses const and let to define variable?"/>
        <Button
            android:id="@+id/ans1"
            android:textColor="@drawable/buttontextcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Php"
            android:textSize="25sp"
            android:onClick="btn"
            android:background="@drawable/ansbutton"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/ans2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="javascript"
            android:textSize="25sp"
            android:textColor="@drawable/buttontextcolor"
            android:background="@drawable/ansbutton"
            android:layout_marginBottom="10dp"
            android:onClick="btn1"/>
        <Button
            android:id="@+id/ans3"
            android:textSize="25sp"
            android:textColor="@drawable/buttontextcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asp"
            android:background="@drawable/ansbutton"
            android:layout_marginBottom="10dp"
            android:onClick="btn2"/>
        <Button
            android:id="@+id/ans4"
            android:layout_width="match_parent"
            android:textColor="@drawable/buttontextcolor"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:text="python"
            android:background="@drawable/ansbutton"
            android:onClick="btn3"/>
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@drawable/ansbutton"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@drawable/buttontextcolor"
        android:textSize="25sp"
        android:text="Skip"
        android:onClick="skip"/>
</RelativeLayout>